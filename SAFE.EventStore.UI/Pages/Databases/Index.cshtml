@page
@model IndexModel
@{
    ViewData["Title"] = "Database overview";
}
<h2>@ViewData["Title"]</h2>
<h3>@Model.Message</h3>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Databases)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Events[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].TimeStamp)
            </th>*@

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Databases)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DatabaseId)
                </td>
                <td>
                    <a asp-page="/Categories" asp-route-databaseId="@item.DatabaseId">Details</a> |
                </td>
            </tr>
        }
    </tbody>
</table>