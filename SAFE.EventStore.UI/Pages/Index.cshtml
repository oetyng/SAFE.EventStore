@page
@model IndexModel
@{
    ViewData["Title"] = "SAFE Events db browser";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">

        <div class="item active">
            <img src="~/images/Network-945x349.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <h4>Database management.</h4>
@if (!Model.Authenticated)
{
                    <a class="btn btn-default" href="/Login">
                        Login with SAFE Authenticator
                    </a>
}
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/network-security.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <h4>Database management.</h4>
@if (!Model.Authenticated)
{
                    <a class="btn btn-default" href="/Login">
                        Login with SAFE Authenticator
                    </a>
}
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/OneTechGenius_Global_Network.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <h4>Database management.</h4>
@if (!Model.Authenticated)
{
                    <a class="btn btn-default" href="/Login">
                        Login with SAFE Authenticator
                    </a>
}
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <h4>Database management.</h4>
                    @if (!Model.Authenticated)
                    {
                        <a class="btn btn-default" href="/Login">
                            Login with SAFE Authenticator
                        </a>
                    }
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

